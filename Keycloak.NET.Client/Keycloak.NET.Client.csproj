<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.1</Version>
    <Authors>Karlo Benčić</Authors>
    <Company>NextLevel Dev</Company>
    <Description>A modern and lightweight C# library for Keycloak REST API integration.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/karlobencic/keycloak-net-client.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/karlobencic/keycloak-net-client</PackageProjectUrl>
    <PackageTags>keycloak, identity, authentication, authorization, .net, csharp</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="Microsoft.IdentityModel.JsonWebTokens" Version="7.6.0" />
  </ItemGroup>

</Project>
